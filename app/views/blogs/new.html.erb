<%= form_for @blog, :url => {:controller => 'blogs', :action => 'create'} do |f| %>
  <p>
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author, 'Author' %>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :content, 'Content' %>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<p>
  <%= link_to 'Back to index', :controller => 'blogs', :action => 'index' %>
</p>